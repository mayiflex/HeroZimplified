{
	"manifest_version": 2,
	"name": "HeroZimplified",
	"version": "0.5",
	"description": "Gives you information about the best available missions and workouts in Hero Zero",
	"homepage_url": "https://github.com/mayiflex/HeroZimplified",
	"browser_specific_settings": {
    "gecko": {
			"strict_min_version": "57.0a1"
		}
	},
	"icons": {
		"32" : "pretty/icons/denodonut.png"
	},
	"permissions": [
		"webRequest", "webRequestBlocking", "storage", "tabs", "https://*.herozerogame.com/*"
	],
	"background": {
		"scripts": ["pack/background.js"]
	},
	"page_action": {
		"default_icon": "pretty/icons/denodonut.png",
		"default_title": "HeroZimplified"
	}
}